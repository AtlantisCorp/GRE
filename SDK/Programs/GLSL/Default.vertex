#version 330

layout(location = 0) in vec3 iPosition ;
layout(location = 1) in vec4 iColor ;
layout(location = 2) in vec3 iNormal ;

uniform mat4 iProjection ;
uniform mat4 iView ;
uniform mat4 iModel ;

out vec4 oColor ;

void main ()
{
    oColor = iColor ;

    mat4 MVP = iProjection * iView * iModel ;
    gl_Position = MVP * vec4(iPosition,1.0) ;
}